<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3._5_to_Roll20" x:Class="_3._5_to_Roll20.MainWindow"
        mc:Ignorable="d"
        Title="Dungeons and Dragons 3.5 Spells to Roll20 macros" Height="350" Width="525"
        d:DataContext="{d:DesignData ''}">
    <Grid Margin="40">
        <ComboBox x:Name="SpellSource" HorizontalAlignment="Left" ItemsSource="{Binding Spells, Mode=OneWay}" Margin="115,42,0,0" VerticalAlignment="Top" Width="312" DisplayMemberPath="Name" />
        <Button x:Name="ConvertButton" Content="Convert" Click="ConvertButton_OnClick" HorizontalAlignment="Left" Margin="352,79,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
